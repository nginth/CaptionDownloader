{
  "manifest_version": 2,

  "name": "Caption Downloader",
  "description": "This extension downloads captions from JWPlayer videos using .srt formats.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "downloads",
    "declarativeContent",
    "tabs"
  ]
}
